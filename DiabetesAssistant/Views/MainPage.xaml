<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiabetesAssistant.MainPage"
             xmlns:viewmodel="clr-namespace:DiabetesAssistant.ViewModel"
             xmlns:model="clr-namespace:DiabetesAssistant.Models"
             x:DataType="viewmodel:MainViewModel">

    <Grid RowDefinitions="100, Auto, *"
          ColumnDefinitions=".75*, .25*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10">
        
        <CollectionView Grid.Row="2"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding Food}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Food">
                    
                        <VerticalStackLayout Padding="10,10"
                                             Margin="0">
                            <Border Stroke="Blue"
                                    StrokeThickness="4"
                                    StrokeShape="RoundRectangle 5,5,5,5"
                                    Background="Green"
                                    Padding="16,10"
                                    Margin="10">
                                <Label Text="{Binding labelNutrients.calories.value, StringFormat='Calories: {0}'}"
                                   FontSize="24"/>
                            </Border>
                            <Border Stroke="Blue"
                                    StrokeThickness="4"
                                    StrokeShape="RoundRectangle 5,5,5,5"
                                    Background="Green"
                                    Padding="16,10"
                                    Margin="10">
                                <Label Text="{Binding labelNutrients.carbohydrates.value, StringFormat='Carbs: {0}'}"
                                   FontSize="24"/>
                            </Border>
                        </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Image Grid.ColumnSpan="2"
               Source="dotnet_bot.png"
               BackgroundColor="Purple"/>
        <Entry Placeholder="Search Nutrition Facts"
               x:Name="SearchNutritionFacts"
               PlaceholderColor="Black"
               Grid.Row="1"/>

        <Button Text="Search"
                Command="{Binding GetLabelNutrientsCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="1"
                Grid.Column="1"/>
    </Grid>
</ContentPage>
